<form >
  <div class="row">
    <label>Username</label>
    <input class="u-full-width" type="text" placeholder="Username">
  </div>
  <div class="row">
    <label>Email</label>
    <input class="u-full-width" type="email" placeholder="Email" >
  </div>
  <div class="row">
    <label>Password</label>
    <input class="u-full-width" type="password" placeholder="Password">
  </div>
  <div class="row">
    <label>Password Confirmation</label>
    <input class="u-full-width" type="password" placeholder="Password Confirmation" ng-model="register.user.passwordConfirmation">
  </div>

  <button>Register</button>
</form>
